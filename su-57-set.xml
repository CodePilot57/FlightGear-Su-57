<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
<!--This file is what FG looks for to be a plane!-->
    <sim>
        <author>POLSKY1, Phoenix</author>
        <description>Sukhoi SU-57 (In Development)</description>
        <long-description>Sample Aircraft Description</long-description>
        <status>alpha</status>
        <aircraft-version>0.1</aircraft-version> 

        <flight-model>null</flight-model> <!--This is important, The aircrafts flight model (fdm) can be yasim, jsbsim, or null (none)-->
        <!--for yasim put "yasim" and for jsbsim put "jsb"-->
        <!--without quotes-->
        <aero>KPN-D</aero> <!--this is the filename of your flight model (fdm)-->


        <aircraft-operator>KPN</aircraft-operator>

        <model>
            <path>Models/su-57.xml</path> <!--The aircrafts 3d model-->

            <!-- This is to prevent bug in older fg -->
            <always-show-in-MP type="bool">true</always-show-in-MP>
        </model>

        <sound>
            <path>Sounds/sound.xml</path> <!--Sound listing-->
        </sound>

        <presets>
            <onground>true</onground>
        </presets>

        <startup>
            <splash-texture>su57-splash.jpg</splash-texture> <!--Image that shows when loading in-->
        </startup>


        <previews> <!--Preview images that show in flightgear launcher. Slideshow-->
            <preview>
                <type>exterior</type>
                <splash type="bool">true</splash>
                <path>gui/1.png</path>
            </preview>
        </previews>

        <current-view>
            <deck-park type="bool">true</deck-park>
            <z-offset-dec-step type="double">0.0</z-offset-dec-step>
            <z-offset-inc-step type="double">0.0</z-offset-inc-step>
            <can-change-z-offset type="bool">false</can-change-z-offset>
            <z-offset-min-m type="float">100.0</z-offset-min-m>
            <z-offset-max-m type="float">2000.0</z-offset-max-m>
        </current-view>
        <chase-distance-m type="double" archive="y">-350.0</chase-distance-m>
        
        <!--Optional Hud-->

        <!--
        <hud> 
            <path n="1">Hud/hud.xml</path>
            <visibility n="1">true</visibility>
            <font>
                <size type="float">11.0</size>
            </font>
        </hud>
        -->

        <tower>
            <auto-position type="bool">true</auto-position>
        </tower>

        <multiplay> <!--Multiplayer Properties-->
            <visibility-range-nm type="int">2000</visibility-range-nm>
            <generic> <!--Multiplayer Variables-->
                <int n="0" type="int">0</int>
                <int n="2" type="int">0</int>
                <int n="3" type="int">0</int>
                <string n="6" type="string"></string>
                <string n="7" type="string"></string>
                <string n="8" type="string"></string>
            </generic>
        </multiplay>

        <menubar>
            <default>
                <menu n="100">
                    <label>Sukhoi Su-57</label>
                    <enabled type="bool">true</enabled>
                    <item>
                        <label>Test menu</label>
                        <binding>
                            <command>nasal</command>
                            <script>
                                screen.log.write("This is some sample nasal code!");
                            </script>
                        </binding>
                    </item>
                </menu>
            </default>
        </menubar>

    </sim> <!--end of /sim/-->
